{
    "manifest_version": 3,
    "name": "Doubanarr",
    "version": "1.0.0",
    "description": "Integrate Douban with Sonarr and Radarr",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://movie.douban.com/subject/*",
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "src/popup.html"
    },
    "options_page": "src/options.html",
    "background": {
        "service_worker": "src/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://movie.douban.com/subject/*"
            ],
            "js": [
                "src/content.js"
            ],
            "css": [
                "src/styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}